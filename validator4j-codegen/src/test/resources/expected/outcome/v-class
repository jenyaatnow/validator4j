package com.validator4j.codegen.testutils;

import com.validator4j.core.ErrorsContainer;
import com.validator4j.core.ValidatableInteger;
import com.validator4j.core.ValidatableObject;
import com.validator4j.core.ValidatableReference;
import com.validator4j.util.Checks;


public final class VTestCodeGenPojo extends ValidatableObject<TestCodeGenPojo> {

    private final ValidatableInteger id;

    private final ValidatableInteger anotherId;

    /**
     * Root object constructor.
     */
    public VTestCodeGenPojo(final TestCodeGenPojo value) {
        this(ValidatableReference.PATH_ROOT, value, ErrorsContainer.getErrorsContainer());

        Checks.nonNull(value, "value");
    }

    /**
     * Nested object constructor.
     */
    VTestCodeGenPojo(final String path, final TestCodeGenPojo value, final ErrorsContainer errors) {
        super(path, value, errors);

        this.id = new ValidatableInteger(appendPath("id"), safeGet(value, TestCodeGenPojo::getId), errors);
        this.anotherId = new ValidatableInteger(appendPath("anotherId"), safeGet(value, TestCodeGenPojo::getAnotherId), errors);
    }

    public ValidatableInteger getId() {
        return id;
    }

    public ValidatableInteger getAnotherId() {
        return anotherId;
    }
}
